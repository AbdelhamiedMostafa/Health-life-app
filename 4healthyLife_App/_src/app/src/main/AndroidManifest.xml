<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthyLife.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" />
        <activity android:name=".NormalActivity" />
        <activity android:name=".GainWeightActivity" />
        <activity android:name=".LoseWeightActivity" />
        <activity android:name=".SportsActivity" />
        <activity android:name=".HypertensionActivity" />
        <activity android:name=".DiabetesActivity" />
        <activity android:name=".FeedbackActivity" />
        <activity android:name=".FeedbackSendActivity" />
        <activity android:name=".SaveProfile"></activity>
    </application>

</manifest>